<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Payment | SAMGATHA X VASHIST</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; background-color: #f8f9fa; }
    .navbar { background: linear-gradient(90deg,  #020744, #67c8f5); }
    .cancel-btn { background-color: #dc3545; border: none; }
    .cancel-btn:hover { background-color: #a71d2a; }
    .main-title { font-size: 2.2rem; font-weight: bold; }
    .sub-title { font-size: 1.3rem; }
    .timer-text { font-size: 1.1rem; color: #020744; margin-bottom: 1rem; }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="index.html">IIITDM Kancheepuram</a>
    </div>
  </nav>

  <div class="container text-center mt-5">
    <h3 class="main-title">Pay for Your Tickets</h3>
    <div class="timer-text">
      This payment session will end in <span id="timer">05:00</span>
    </div>
    <p class="sub-title">Scan this QR code to pay â‚¹<%- totalAmount %></p>
    <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=FestPayment" alt="QR Code">
    <div class="mt-4 d-flex justify-content-center">
      <a href="BOOKING" class="btn cancel-btn">Cancel Payment</a>
    </div>
  </div>
<script>
  // Timer duration in seconds
  const duration = 300;
  const timerEl = document.getElementById('timer');
  // Store the session start time
  const startTime = Date.now();

  function updateTimer() {
    const elapsed = Math.floor((Date.now() - startTime) / 1000);
    const remaining = Math.max(duration - elapsed, 0);
    const min = String(Math.floor(remaining / 60)).padStart(2, '0');
    const sec = String(remaining % 60).padStart(2, '0');
    timerEl.textContent = `${min}:${sec}`;
    if (remaining > 0) {
      setTimeout(updateTimer, 1000);
    } else {
      timerEl.textContent = "00:00";
      alert("Payment session has expired. Please try booking again.");
      window.location.href = "BOOKING";
      // Optionally, you can redirect or show a message here  
    }
  }
  updateTimer();
</script>
</body>
</html>